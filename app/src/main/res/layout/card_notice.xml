<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noticeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Title"
                android:textColor="#FFFFFF"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
                android:background="@drawable/shape_rounded"
                android:padding="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/noticeDate"
                    android:layout_height="wrap_content"
                    android:text="Notice Date"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/noticeTime"
                    android:layout_height="wrap_content"
                    android:text="Notice Time"
                    android:layout_width="wrap_content"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:padding="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/noticeBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Body"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:padding="5dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>